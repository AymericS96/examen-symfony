{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    
    {{ form_start(form) }}

    {{ form_row(form._token) }}

    {{ form_label(form.name,'Nom ville') }}
    {{ form_widget(form.name,{'attr':{'maxlength':'50'}}) }}

    {{ form_label(form.postalCode,'Code postal') }}
    {{ form_widget(form.postalCode,{'attr':{'maxlength':'50'}}) }}

    {{ form_label(form.population,'Population') }}
    {{ form_widget(form.population)}}

    {{ form_label(form.image,'Image') }}
    {{ form_widget(form.image,{'attr':{'maxlength':'255'}}) }}

    {{ form_label(form.slug,'Slug') }}
    {{ form_widget(form.slug,{'attr':{'maxlength':'50'}}) }}

    {{ form_label(form.departement,'DÃ©partement') }}
    {{ form_widget(form.departement,{'attr':{'maxlength':'50'}}) }}

    {{ form_label(form.save,'Ajouter ville') }}
    {{ form_widget(form.save) }}

    {{ form_end(form, {'render_rest': false}) }}
</div>

{% endblock %}
