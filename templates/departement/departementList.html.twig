{% extends 'base.html.twig' %}

{% block title %} Liste des départements {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
   
<table class="table" >
<tr>
    <th>Nom</th>
    <th>Code département</th>
    <th>Slug</th>
    <th>Editer</th>
    <th>Supprimer</th>
</tr>
{% for departement in listeDepartement %}
<tr>
    <td>{{departement.name}}</td>
    <td>{{departement.codeDepartement}}</td>
    <td>{{departement.slug}}</td>
    <td>
        <a href="{{path('admin_editDepartement',{'id':departement.id})}}"> 
            Editer 
        </a>
    </td>
    <td><a href="{{path('admin_deleteDepartement',{'id':departement.id})}}"> 
            Supprimer 
        </a>
    </td>

</tr>

{% endfor %}
</table>

</div>
{% endblock %}
